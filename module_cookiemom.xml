  </path>
  
  
  <patternset id="excluded.from.module.cookiemom">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cookiemom">
    <patternset refid="excluded.from.module.cookiemom"/>
  </patternset>
  
  <path id="cookiemom.module.sourcepath">
    <dirset dir="${module.cookiemom.basedir}">
      <include name="gen"/>
      <include name="src/main/java"/>
      <include name="target/generated-sources/annotations"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cookiemom" depends="compile.module.cookiemom.production,compile.module.cookiemom.tests" description="Compile module CookieMom"/>
  
  <target name="compile.module.cookiemom.production" depends="register.custom.compilers" description="Compile module CookieMom; production classes">
    <mkdir dir="${cookiemom.output.dir}"/>
    <javac2 destdir="${cookiemom.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cookiemom}/javac">
      <compilerarg line="${compiler.args.cookiemom}"/>
      <bootclasspath refid="cookiemom.module.bootclasspath"/>
      <classpath refid="cookiemom.module.production.classpath"/>
      <src refid="cookiemom.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cookiemom"/>
    </javac2>
    
    <copy todir="${cookiemom.output.dir}">
      <fileset dir="${module.cookiemom.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.cookiemom.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.cookiemom.basedir}/target/generated-sources/annotations">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cookiemom.tests" depends="register.custom.compilers,compile.module.cookiemom.production" description="compile module CookieMom; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cookiemom" description="cleanup module">
    <delete dir="${cookiemom.output.dir}"/>
    <delete dir="${cookiemom.testoutput.dir}"/>
  </target>
</project>