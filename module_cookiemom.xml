    <path refid="library.maven:_com.sun.codemodel:codemodel:2.4.1.classpath"/>
  </path>
  
  <path id="cookiemom.runtime.module.classpath">
    <pathelement location="${cookiemom.testoutput.dir}"/>
    <pathelement location="${cookiemom.output.dir}"/>
    <path refid="library.maven:_de.greenrobot:greendao:1.3.3.classpath"/>
    <path refid="library.maven:_org.freemarker:freemarker:2.3.19.classpath"/>
    <path refid="library.maven:_com.nineoldandroids:library:2.4.0.classpath"/>
    <path refid="library.maven:_joda-time:joda-time:2.2.classpath"/>
