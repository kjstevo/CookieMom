<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.echo.holographlibrary.BarGraph android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:id="@+id/bargraph" android:layout_weight="1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/bar_legend" android:layout_gravity="center_horizontal" android:layout_marginBottom="15dp"
            android:padding="5dp" android:gravity="center_horizontal"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>

</LinearLayout>