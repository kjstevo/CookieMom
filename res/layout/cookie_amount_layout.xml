<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="fill_parent" android:background="@drawable/cab_background_bottom_carddemo">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="2"
            android:background="@android:drawable/picture_frame" android:id="@+id/expected_panel">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Amount Expected:"
                android:id="@+id/textView" style="@style/card.base_simple_title" android:textStyle="bold"
                android:lines="2" android:maxLines="2"/>
        <TextView style="@style/card.header_simple_title" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:text="155" android:id="@+id/amount_expected"
                  android:textStyle="bold" android:gravity="center_horizontal"/>
        <TextView style="@style/card.header_simple_title" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:text="155" android:id="@+id/cases_expected"
                  android:textStyle="bold" android:gravity="center_horizontal" android:visibility="gone"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginBottom="5dp">


        <TextView
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="Qty:"
                android:id="@+id/textView1"
                android:padding="10dp" style="@style/card.header_simple_title"
                android:lines="2" android:minLines="2" android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/cookie_amount" android:gravity="center_vertical|right"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:id="@+id/cookie_amount"
                android:padding="10dp"
                style="@android:style/Widget.DeviceDefault.Light.EditText"
                android:gravity="center" android:enabled="true"
                android:editable="false" android:layout_alignParentRight="true" android:layout_centerVertical="true"
                android:singleLine="true"/>
        <EditText style="@android:style/Widget.DeviceDefault.Light.EditText" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="000" android:id="@+id/edit_text_cases"
                  android:padding="10dp" android:gravity="center" android:enabled="true" android:editable="false"
                  android:layout_alignParentRight="true" android:layout_centerVertical="true"
                  android:singleLine="true" android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>