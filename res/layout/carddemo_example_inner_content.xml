<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView
            android:layout_marginTop="2dp"
            android:id="@+id/colorBorder"
            android:background="@drawable/rectangle"
            android:layout_width="10dp"
            android:layout_height="@dimen/card_base_empty_height" android:layout_marginLeft="10dp"/>

    <!-- Use same ID to use built-in features -->
    <TextView
            android:id="@+id/card_main_inner_simple_title"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="9"
            android:layout_alignLeft="@+id/textView" android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="w/Scouts"
            android:id="@+id/textView1"
            android:layout_marginRight="10dp" android:layout_below="@+id/card_main_inner_simple_title"
            android:layout_toRightOf="@+id/colorBorder" android:layout_marginLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/with_scouts_count"
            android:layout_above="@+id/textView1" android:layout_alignRight="@+id/textView1"
            android:layout_alignLeft="@+id/textView1" android:gravity="center_horizontal"
            android:textSize="@dimen/card_header_simple_title_text_size" android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="In Stock"
            android:id="@+id/textView" android:gravity="center_horizontal|top"
            android:layout_toRightOf="@+id/textView1"
            android:layout_alignParentBottom="false" android:layout_centerVertical="true"
            android:layout_alignBottom="@+id/textView1" android:layout_marginLeft="20dp"/>


</RelativeLayout>